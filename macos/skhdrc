# Komorebi window manager keybindings
cmd + shift - r         : komorebic retile
cmd + shift - return    : komorebic promote-swap
cmd - t                 : komorebic toggle-float
cmd + shift - f         : komorebic toggle-monocle

cmd - 1                 : komorebic focus-workspace 0
cmd - 2                 : komorebic focus-workspace 1
cmd - 3                 : komorebic focus-workspace 2
cmd - 4                 : komorebic focus-workspace 3
cmd - 5                 : komorebic focus-workspace 4
cmd - 6                 : komorebic focus-workspace 5
cmd - 7                 : komorebic focus-workspace 6
cmd - 8                 : komorebic focus-workspace 7
cmd - 9                 : komorebic focus-workspace 8

cmd + shift - 1         : komorebic send-to-workspace 0
cmd + shift - 2         : komorebic send-to-workspace 1
cmd + shift - 3         : komorebic send-to-workspace 2
cmd + shift - 4         : komorebic send-to-workspace 3
cmd + shift - 5         : komorebic send-to-workspace 4
cmd + shift - 6         : komorebic send-to-workspace 5
cmd + shift - 7         : komorebic send-to-workspace 6
cmd + shift - 8         : komorebic send-to-workspace 7
cmd + shift - 9         : komorebic send-to-workspace 8

# Launch apps
cmd - return 	        : open -a Ghostty.app

# Manage windows
.define tray_apps ["discord", "zulip"]
cmd - q [
	@tray_apps          | cmd - m  # Minimize certain apps instead of quitting them
	*                   | cmd - w  # Close other apps normally
]